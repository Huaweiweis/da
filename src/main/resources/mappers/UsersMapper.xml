<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcf.mapper.UsersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zcf.pojo.Users">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="user_password" property="userPassword" />
        <result column="user_invitation_code" property="userInvitationCode" />
        <result column="user_grade" property="userGrade" />
        <result column="user_recharge_money" property="userRechargeMoney" />
        <result column="user_recharge_integral" property="userRechargeIntegral" />
        <result column="add_time" property="addTime" />
        <result column="up_time" property="upTime" />
        <result column="user_phone" property="userPhone" />
        <result column="user_nickname" property="userNickname" />
        <result column="user_robot" property="userRobot" />
        <result column="user_img" property="userImg" />
        <result column="the_higher_the_agent" property="theHigherTheAgent" />
        <result column="user_num" property="userNum" />
        <result column="user_wx" property="userWx" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_name,user_img,the_higher_the_agent,user_num, user_password,user_nickname,user_robot,user_phone, user_invitation_code, user_grade, user_recharge_money, user_recharge_integral, add_time, up_time,user_wx
    </sql>
	<select id="getusers" resultMap="BaseResultMap">
		SELECT
	b.*
FROM
	userroom a
LEFT JOIN users b ON b.user_id = a.user_id
WHERE
	a.room_id = #{roomid}
	</select>
</mapper>
